<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="true">


    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="ApplicationResources"/>
        <property name="useCodeAsDefaultMessage" value="true"/>
    </bean> 
    
    <!-- Activates scanning of @Autowired -->
    <context:annotation-config/>

    <!-- Activates scanning of @Repository and @Service -->
    <context:component-scan base-package="com.digitalchocolate.socailbetting.engine"/> 

    <!-- Add new DAOs here -->

    <!-- Add new Beans here -->
    <bean id="opponentSearchExpireListen" class="com.digitalchocolate.socailbetting.executor.listener.OpponentSearchExpireLisener"/>
    
    <bean id="defaultStartOpponentTimerCommand" class="com.digitalchocolate.socailbetting.executor.DefaultStartOpponentTimerCommand">
    	<property name="opponentListener" ref="opponentSearchExpireListen"/>
    </bean>
    
    <bean id="defaultAddOpponentTargetCommand" class="com.digitalchocolate.socailbetting.executor.DefaultAddOpponentTargetCommand">
    	<property name="ruleDao" ref="ruleDao"/>
    </bean>
    
    <bean id="defaultAddFriendCommand" class="com.digitalchocolate.socailbetting.executor.DefaultAddFriendCommand"/>
   
    <bean id="defaultSetExpectedLevelCommand" class="com.digitalchocolate.socailbetting.executor.DefaultSetExpectedLevelCommand"/>
    
    <bean id="defaultValidateOpponentCommand" class="com.digitalchocolate.socailbetting.executor.DefaultValidateOpponentCommand" />
    
    <bean id="defaultCalculateOddsCommand" class="com.digitalchocolate.socailbetting.executor.DefaultCalculateOddsCommand"  />
    
    <bean id="defaultValidateMinBetCommand" class="com.digitalchocolate.socailbetting.executor.DefaultValidateMinBetCommand" />
    
    <bean id="defaultValidateMaxBetCommand" class="com.digitalchocolate.socailbetting.executor.DefaultValidateMaxBetCommand" />
    
    <bean id="defaultStartCompletionTimerCommand" class="com.digitalchocolate.socailbetting.executor.DefaultStartCompletionTimerCommand" >
    	<property name="completionListener" ref="completionExpireListen"/>
    </bean>
    
    <bean id="defaultCallbackCommand" class="com.digitalchocolate.socailbetting.executor.DefaultCallbackCommand" >
    	<property name="restTemplate" ref="restTemplate"/>
    </bean>
    <bean id="completionExpireListen" class="com.digitalchocolate.socailbetting.executor.listener.CompletionExpireLisener"/>
    
    <bean id="defaultStartEvaluationCommand" class="com.digitalchocolate.socailbetting.executor.DefaultStartEvaluationCommand" />
    
    <bean id="defaultValidateAllOpponentsCompletedCommand" class="com.digitalchocolate.socailbetting.executor.DefaultValidateAllOpponentsCompletedCommand" /> 
    
    <bean id="defaultSettlementRuleExecutionCommand" class="com.digitalchocolate.socailbetting.executor.DefaultSettlementRuleExecutionCommand" />
           
    <bean id="defaultLowestValueWinExecutionCommand" class="com.digitalchocolate.socailbetting.executor.DefaultLowestValueWinExecutionCommand" />
     
    <bean id="defaultHighestValueWinExecutionCommand" class="com.digitalchocolate.socailbetting.executor.DefaultHighestValueWinExecutionCommand" />     
</beans>